# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file           controllers.Assets.at(path="/public", file)

# Cliente
GET    /                       controllers.ClienteController.index()
GET    /pelicula/:id           controllers.ClienteController.verFichaPelicula(id: Long)
GET    /pelicula/:id/comprar   controllers.ClienteController.comprarEntrada(id: Long)
GET    /usuario/nuevo          controllers.UsuarioController.registroNuevo()

# Administrador
GET    /admin                  controllers.AdminController.index()
GET    /admin/nueva            controllers.AdminController.nuevaPelicula()
POST   /admin/nueva/crear      controllers.AdminController.crearPelicula()
POST   /admin/:id/eliminar     controllers.AdminController.eliminarPelicula(id: Long)
GET    /admin/sesiones         controllers.AdminController.verSesiones()
GET    /admin/sesiones/nueva            controllers.AdminController.nuevaSesion()
POST   /admin/sesiones/nueva/crear      controllers.AdminController.crearSesion()
POST   /admin/sesiones/:id/eliminar     controllers.AdminController.eliminarSesion(id: Long)
GET    /admin/salas            controllers.AdminController.verSalas()
GET    /admin/salas/nueva               controllers.AdminController.nuevaSala()
POST   /admin/salas/nueva/crear         controllers.AdminController.crearSala()
POST   /admin/salas/:id/eliminar        controllers.AdminController.eliminarSala(id: String)
